<body>


    <div id="main">
        <form style="width:fit-content;" action="/register" method="post">
            <label for="mail">
                <h6>Email</h6>
            </label>
            <br />
            <input type="email"  class="form-control me-2"   id="email" name="email"><br />
            <label for="password">
                <h6>Password</h6>
            </label>
             <br />
            <input type="password"  class="form-control me-2"   id="password" name="password"><br />
            <label for="rpassword">
                <h6>Repeat password</h6>
            </label><br />
            <input type="password"   class="form-control me-2"   id="rpassword" name="rpassword"><br />
            <input type="submit" class="btn btn-outline-success" value="Submit">
        </form>
    </div>
    <div style="color:red;width:100%; text-align:center; margin-top:10px"><h6>{{mErr}}</h6></div><br/>
